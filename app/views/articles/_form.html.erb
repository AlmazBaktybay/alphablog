	<% if @article.errors.any? %>
		<h3> The following errors occured</h3>
		<ul>
			<%= @article.errors.full_messages.each do |msg| %>
				<li> <%= msg %> </li>
			<% end %>
		</ul>
	<% end %>
	<div class="row">
		<div class="col-md-12">
			<%= form_for(@article, html: => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :title %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :title, class: "form-control",
					placeholder: "Title of the article", autofocus: true%>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :description %>
				</div>
				<div class="col-md-8">
					<%= f.text_area :description, class: "form-control", placeholder: "Title of the article", autofocus: true%>
				</div>
			</div>
		</div>
	</div>
<%= form_for @article do |f| %>
	<p>
		<%= f.label :title %> <br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %> <br>
		<%= f.text_area :description %><br>
	</p>
	<p>
		<%= f.submit %>
	</p>
<%end%> 